<div class="container border " align="center"  style="border-radius: 15px; border: 2px solid ; padding: 15px;">

<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, style: 'color: black;' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", style: 'border-radius: 25px; border: 2px solid black;' %>
  </div>
  <br>
  <br>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", style: 'border-radius: 25px; border: 2px solid black;', class: 'btn btn-lg' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>

